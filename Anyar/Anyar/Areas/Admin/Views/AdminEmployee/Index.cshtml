@model List<Employee>

@{
    ViewData["Title"] = "AdminEmployee";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bordered table</h4>
            <a class="btn btn-warning sm-2" asp-action="Create">
                <i class="mdi mdi-table-edit"></i>
            </a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Avatar
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                Professian
                            </th>
                            <th>
                                Facebook
                            </th>
                            <th>
                                Twitter
                            </th>
                            <th>
                                Instagram
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee employee in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/img/team/@employee.Img" alt="image" />
                                </td>
                                <td>
                                        @employee.FullName
                                </td>
                                <td>
                                        @employee.Professia
                                </td>
                                <td>
                                        @employee.Facebook
                                </td>
                                <td>
                                        @employee.Twitter
                                </td>
                                <td>
                                        @employee.Instagram
                                </td>
                                <td>
                                    <a class="btn btn-primary sm-2" asp-action="Update" asp-route-id="@employee.Id">
                                        <i class="mdi mdi-account-edit"></i>
                                    </a>
                                    <a class="btn btn-danger sm-2" asp-action="Delete" asp-route-id="@employee.Id">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>